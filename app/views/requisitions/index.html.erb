<h1>Listing requisitions</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Vendor</th>
      <th>Purchaser</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requisitions.each do |requisition| %>
      <tr>
        <td><%= requisition.vendor %></td>
        <td><%= requisition.purchaser %></td>
        <td><%= link_to 'Build Questions' %> </td>
        <td>Answer Questions </td>
        <td><%= link_to 'Show', requisition %></td>
        <td><%= link_to 'Edit', edit_requisition_path(requisition) %></td>
        <td><%= link_to 'Destroy', requisition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Requisition', new_requisition_path %>
