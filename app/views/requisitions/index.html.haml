%h1 Listing requisitions
%table.table.table-hover
  %thead
    %tr
      %th Vendor
      %th Purchaser
      %th{:colspan => "3"}
  %tbody
    - @requisitions.each do |requisition|
      %tr
        %td= requisition.vendor
        %td= requisition.purchaser
        %td
          = link_to 'Select Questions', select_questions_path(requisition)
        %td 
          = link_to 'Answer Questions', answer_questions_path(requisition)
        %td= link_to 'Show', requisition
        %td= link_to 'Edit', edit_requisition_path(requisition)
        %td= link_to 'Destroy', requisition, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Requisition', new_requisition_path
