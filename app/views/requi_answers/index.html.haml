%h1 Listing requi_answers
%table
  %thead
    %tr
      %th Requisition
      %th Requi question
      %th Question
      %th Text
      %th{:colspan => "3"}
  %tbody
    - @requi_answers.each do |requi_answer|
      %tr
        %td= requi_answer.requisition
        %td= requi_answer.requi_question
        %td= requi_answer.question
        %td= requi_answer.text
        %td= link_to 'Show', requi_answer
        %td= link_to 'Edit', edit_requi_answer_path(requi_answer)
        %td= link_to 'Destroy', requi_answer, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Requi answer', new_requi_answer_path
